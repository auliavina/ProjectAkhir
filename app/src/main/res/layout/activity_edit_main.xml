<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditMainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/form_text">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:id="@+id/login_text"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue_01"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/enternama"
                android:background="@drawable/form_text"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Nama Lengkap"
                android:drawableLeft="@drawable/baseline_person_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/enternohp"
                android:background="@drawable/form_text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="No Hp"
                android:drawableLeft="@drawable/baseline_contact_phone_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/enterjk"
                android:background="@drawable/form_text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Jenis Kelamin"
                android:drawableLeft="@drawable/baseline_person_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/enteremail"
                android:background="@drawable/form_text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="E-Mail"
                android:drawableLeft="@drawable/baseline_email_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/enterpassword"
                android:background="@drawable/form_text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:textColor="@color/black"
                android:drawablePadding="8dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Edit"
                android:id="@+id/edit_botton"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blue_01"
                app:cornerRadius = "20dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>