<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMateriMainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topik ..."
            android:id="@+id/text"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue_01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="        Ruang lingkup audit TI mencakup pemeriksaan menyeluruh pada infrastruktur IT, data, proses bisnis, tata kelola, dan kepatuhan organisasi, memastikan keamanan, efisiensi, dan kepatuhan terhadap peraturan, serta membantu mengidentifikasi risiko, meningkatkan efektivitas, dan membangun kepercayaan pemangku kepentingan."
            android:id="@+id/text2"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/topik3"
            android:background="@drawable/form_text"
            android:layout_marginTop="20dp"
            android:padding="13dp"
            android:text="Ruang Lingkuo Audit TI/SI.PDF"
            android:drawableLeft="@drawable/baseline_book_24"
            android:textColor="@color/blue_01"
            android:drawablePadding="8dp"/>



    </LinearLayout>




</ScrollView>